{
    "extends": ["stylelint-config-recommended", "stylelint-config-sass-guidelines"],
    "ignoreFiles": "**/dist/**",
    "overrides": [
        {
            "files": ["**/*.scss"],
            "customSyntax": "postcss-scss"
        }
    ],
    "rules": {
        "@stylistic/indentation": 4,
        "no-descending-specificity": null,
        "max-nesting-depth": 2,
        "selector-max-id": 1
    }
}
